{
    "version": 6,
    "include": [
        "base.json",
        "os/linux.json",
        "compilers/clang.json"
    ],
    "configurePresets": [
        {
            "name": "x64-linux-clang",
            "inherits": [
                "base",
                "linux",
                "clang"
            ],
            "displayName": "x64 linux clang static libs"
        },
        {
            "name": "x64-linux-clang-asan",
